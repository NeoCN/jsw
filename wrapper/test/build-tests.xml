    <!-- Clean up everything.                                                -->
    <!-- =================================================================== -->
    <target name="total-clean">
        <delete>
            <fileset dir="${basedir}">
                <exclude name="build-tests.xml"/>
            </fileset>
        </delete>
    </target>

</project>

